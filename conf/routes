# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.NotLoggedIn.index
GET     /about                  controllers.NotLoggedIn.about
GET     /bitcoin                controllers.NotLoggedIn.bitcoin

# Authentication
GET     /login                  controllers.NotLoggedIn.login
POST    /login                  controllers.NotLoggedIn.authenticate
GET     /register              controllers.NotLoggedIn.register
POST   /register              controllers.NotLoggedIn.registerUser
#
# Logged in
#
# Home
GET     /home                  controllers.Application.home
# Should be POST?
GET     /logout                controllers.Application.logout

# OrderBook
GET    /order/ask         controllers.Application.askOrder
POST   /order/ask         controllers.Application.placeAskOrder
GET    /order/bid         controllers.Application.bidOrder
POST   /order/bid         controllers.Application.placeBidOrder
GET    /order                 controllers.Application.userOrders
GET    /order/all           controllers.Application.orders

#Trades
GET    /trade                 controllers.Application.trades

# Funds
GET     /funds                             controllers.Funds.index
GET     /funds/add                     controllers.Funds.add
#POST  /funds/add                    controllers.Funds.orderAdd
GET     /funds/withdraw           controllers.Funds.withdraw
POST   /fund/withdraw             controllers.Funds.orderWithdraw


#Admin
GET   /admin/                              controllers.Admin.index
GET   /admin/transactions           controllers.Admin.transactions
GET   /admin/users                      controllers.Admin.users
POST  /admin/logout                   controllers.Admin.logout



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file         controllers.Assets.at(path="/public", file)
